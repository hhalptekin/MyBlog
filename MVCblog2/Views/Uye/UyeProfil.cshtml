@model MVCblog2.Models.Uye

@{
    ViewBag.Title = "UyeProfil";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<h2>Üye Profil</h2>

<div class="col-md-12">

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Yetki.Yetki1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Yetki.Yetki1)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdSoyad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Foto)
        </dt>

        <dd>
            <img src="@Model.Foto" width="60" class="rounded-circle" alt="@Model.AdSoyad" />
        </dd>

    </dl>
</div>
<div class="col-md-12">

    <span>Son Yazılar:</span>
    <hr />
    @foreach (var item in Model.Makales.OrderByDescending(x => x.MakaleID).Take(5))
    {
        <li>
            <a href="/Home/MakaleDetay/@item.MakaleID">@item.Baslik</a>
        </li>
    }

</div>
